{{> layout/header}}
<div class="container d-flex">
    <div class=" mx-2 pb-4 w-100">
        {{#scrap}}
            <div class="border border-tertiary p-5 rounded shadow">
                <div class="px-5">
                    <input style="display: none" id="companyId">

                    <div class="d-flex justify-content-start align-items-center">
                        <div class="col">
                            <h3 style="font-weight: bold">{{resume.title}}</h3>
                        </div>
                        <form action="/company/scrap/{{id}}/detail/delete" method="post">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-outline-success" type="submit">취소하기</button>
                            </div>
                        </form>
                    </div>
                    <hr class="d-inline-flex w-100">
                    <form class="row d-flex justify-content-end g-3 align-items-center"
                          action="/company/scrap/{{id}}/detail/offer" method="post">
                        <div class="col-auto">
                            <select class="form-select form-select-sm" aria-label="Default select example"
                                    id="postChoice"
                                    name="postChoice">
                                <option selected>채용 공고 선택</option>
                                {{#postList}}
                                    <option value="{{id}}">{{title}}</option>
                                {{/postList}}

                            </select>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-success btn-sm" type="submit"><i
                                    class="far fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>


                </div>


                <div class="d-flex justify-content-center">
                    <div style="width: 85%;">

                        <div class="jh_resume_flexbox mt-3">
                            <!-- 이미지를 올리면 그게 올라가고 올리지 않으면 기본 프로필이 올라감 -->
                            <img src="/images/{{resume.user.profile}}" alt="프로필 사진" style="width: 188px; height: 226px;">
                            <table class="resume_table">
                                <tr>
                                    <td>이름</td>
                                    <td>{{resume.user.name}}</td>
                                </tr>
                                <tr>
                                    <td>생년월일</td>
                                    <td>{{resume.user.birth}}</td>
                                </tr>
                                <tr>
                                    <td>전화번호</td>
                                    <td>{{resume.user.tel}}</td>
                                </tr>
                                <tr>
                                    <td>주소</td>
                                    <td>{{resume.user.address}}</td>
                                </tr>
                                <tr>
                                    <td>이메일</td>
                                    <td>{{resume.user.email}}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="mt-5">
                            <h4>커리어</h4>
                            <textarea name="" class="w-100 opacity-50" rows="10" readOnly>
                            {{resume.career}}
                        </textarea>
                            <h4>간단 소개</h4>
                            <textarea name="" class="w-100 opacity-50" rows="10" readOnly>
                            {{resume.simpleIntroduce}}
                        </textarea>
                            <h4>포트폴리오 주소</h4>
                            <input type="url" class="form-control mt-2" id="" style="display: block;"
                                   value="{{resume.portfolio}}" readOnly>
                        </div>
                        <div class="mt-5 jh_resume_skill">
                            <h4>기술스택</h4>
                            <div>
                                <ul>
                                    {{#resume.skillList}}
                                        <li>{{skill}}</li>
                                    {{/resume.skillList}}

                                </ul>
                            </div>
                        </div>
                        <div class="mt-5 w-100">
                            <h4>자기소개</h4>
                            <textarea name="" class="w-100 opacity-50" rows="10" readOnly>
                            {{resume.introduce}}
                        </textarea>
                        </div>
                    </div>
                </div>
            </div>
        {{/scrap}}
    </div>
    <!-- list-group( 오른쪽 바로가기) 시작 -->
    <div class="list-group mx-2">
        <a href="/company/info" class="list-group-item shadow " style="width: 180px;">회사 정보 관리</a>
        <a href="/company/post" class="list-group-item shadow">공고 관리</a>
        <a href="/company/resume" class="list-group-item hs_list_effect shadow">받은 이력서</a>
        <a href="/company/scrap" class="list-group-item shadow">스크랩한 이력서</a>
        <a href="/company/offers" class="list-group-item shadow">제안한 이력서</a>
    </div>
    <!-- list-group( 오른쪽 바로가기) 끝 -->
</div>
{{> layout/footer}}