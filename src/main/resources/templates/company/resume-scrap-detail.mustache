{{> layout/header}}
<div class="container d-flex">
    <div class=" mx-2 pb-4 w-100">
            <div class="border-tertiary p-5">
                <div class="px-5">
                    <input style="display: none" id="companyId">

                    <div class="d-flex justify-content-start align-items-center">
                        <div class="col">
                            <h3 style="font-weight: bold">제목</h3>
                        </div>
                        <form action="/company/scrap/1/detail/delete" method="post">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-outline-success" type="submit">취소하기</button>
                            </div>
                        </form>
                    </div>
                    <hr class="d-inline-flex w-100">
                    <form class="row d-flex justify-content-end g-3 align-items-center"
                          action="/company/scrap/1/detail/offer" method="post">
                        <div class="col-auto">
                            <select class="form-select form-select-sm" aria-label="Default select example"
                                    id="postChoice"
                                    name="postChoice">
                                <option selected>채용 공고 선택</option>

                                    <option value="id">제목</option>

                            </select>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-success btn-sm" type="submit"><i
                                    class="far fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>


                </div>


                <div class="d-flex justify-content-center">
                    <div style="width: 85%;">

                        <div class="jh_resume_flexbox mt-3">
                            <!-- 이미지를 올리면 그게 올라가고 올리지 않으면 기본 프로필이 올라감 -->
                            <img src="/images/파일명" alt="프로필 사진" style="width: 188px; height: 226px;">
                            <table class="resume_table">
                                <tr>
                                    <td>이름</td>
                                    <td>이름</td>
                                </tr>
                                <tr>
                                    <td>생년월일</td>
                                    <td>생년월일</td>
                                </tr>
                                <tr>
                                    <td>연락처</td>
                                    <td>연락처</td>
                                </tr>
                                <tr>
                                    <td>주소</td>
                                    <td>주소</td>
                                </tr>
                                <tr>
                                    <td>이메일</td>
                                    <td>이메일</td>
                                </tr>
                            </table>
                        </div>
                        <div class="mt-5">
                            <h4>경력사항</h4>
                            <textarea name="" class="w-100 opacity-50" rows="10" readOnly>
                            경력
                        </textarea>
                            <h4>간단 소개</h4>
                            <textarea name="" class="w-100 opacity-50" rows="10" readOnly>
                            한줄소개
                        </textarea>
                            <h4>포트폴리오 주소</h4>
                            <input type="url" class="form-control mt-2" id="" style="display: block;"
                                   value="포트폴리오주소" readOnly>
                        </div>
                        <div class="mt-5 jh_resume_skill">
                            <h4>기술스택</h4>
                            <div>
                                <ul>
                                        <li>스킬</li>

                                </ul>
                            </div>
                        </div>
                        <div class="mt-5 w-100">
                            <h4>자기소개</h4>
                            <textarea name="" class="w-100 opacity-50" rows="10" readOnly>
                            자기소개
                        </textarea>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <div>
                        <a href="/company/scrap" class="btn btn-outline-success mb-3"
                           style="width: 100%">목록으로
                        </a>
                    </div>
                </div>
            </div>
    </div>
</div>
{{> layout/footer}}