{{> layout/header}}
<div class="container d-flex">
    <div class=" mx-2 pb-4 w-100">
        <div class="m-5">
            <div class="d-flex justify-content-between">
                <h1 class="d-inline-flex">회원 정보</h1>

            </div>
            <hr>

            <div>
                <div class="container w-50 mt-5 text ">
                    <form action="/company/info/update-form" method="get">

                        <div class="mb-3 mt-3">
                            <label for="compName" class="form-label">회사명</label>
                            <input type="compName" class="form-control" id="compName" name="compName"
                                   value="zusimCompany" readonly>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="businessNum" class="form-label">사업자 번호</label>
                            <input type="businessNum" class="form-control" id="businessNum" name="businessNum" value="123-456-78"
                                   readonly>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="address" class="form-label">회사주소</label>
                            <input type="address" class="form-control" id="address" name="address" value="부산광역시"
                                   readonly>
                        </div>

                        <div class="mb-3 mt-3">
                            <label for="phone" class="form-label">회사 전화번호</label>
                            <input type="phone" class="form-control" id="phone" name="phone"
                                   value="051-1234-5678" readonly>
                        </div>

                        <div class="mt-5">
                            <h4 class="border-bottom pb-4">담당자 정보</h4>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="name" class="form-label">이름</label>
                            <input type="name" class="form-control" id="name" name="name" value="심유주"
                                   readonly>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="email" class="form-label">이메일</label>
                            <input type="email" class="form-control" id="email" name="email"
                                   value="zusim@nate.com" readonly>
                        </div>

                        <hr class="my-4">
                        <div style="width: 100%;">
                            <button type="submit" class="btn btn-outline-success mb-3"
                                    style="width: 100%">수정하기
                            </button>
                        </div>
                        <!-- </div> -->
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- list-group( 오른쪽 바로가기) 시작 -->
    <div class="list-group" style="position: fixed; right: 80px; top: 220px; width: 180px;">
        <a href="/company/info" class="list-group-item active" style="width: 180px;">회사 정보 관리</a>
        <a href="/company/posts" class="list-group-item" style="width: 180px;">공고 관리</a>
        <a href="/company/resumes" class="list-group-item hs_list_effect" style="width: 180px;">받은 이력서</a>
        <a href="/company/scrap" class="list-group-item " style="width: 180px;">스크랩한 이력서</a>
        <a href="/company/offers" class="list-group-item" style="width: 180px;">제안한 이력서</a>
    </div>
</div>
{{> layout/footer}}