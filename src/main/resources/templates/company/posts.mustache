{{> layout/header}}
<div class="container d-flex">

    <section class="container grid-gap: 50px; mt-5">
        <div class="d-flex justify-content-start align-items-center">
            <h1 class="m-3">등록한 공고</h1>
            <div class="d-flex justify-content-center ">
                <a href="/company/posts/save-form" class="btn btn-outline-primary" style="width: 100%;">새 공고 만들기</a>
            </div>
        </div>
        <br>
        <ul class="row row-cols-4 gap-3">
            <!-- 구인공고 시작 -->

                <li class="card col" style="width: 15rem; padding: 0px !important; border: 0">
                    <a href="/company/posts/1" style="text-decoration: none; color: black">
                        <div style="width: 240px; height:125px; overflow: hidden">
                            <!--                        이미지 에스알씨를 디비에서 받아오게 해야 한다. -->
                            <img src="/images/파일명" class="card-img-top" alt="이력서 사진"/>
                        </div>
                        <div class="card-body">
                            <h5 class="card-text" style="
                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            text-overflow: ellipsis;
                          ">회사명</h5>
                            <h5 class="card-text" style="
                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            text-overflow: ellipsis;
                          ">제목</h5>
                            <div style="  margin: 5px;
                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            text-overflow: ellipsis;
                          ">
                            </div>
                                <div class="btn btn-outline-primary disabled">스킬</div>
                            <p style="  margin: 5px;
                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            text-overflow: ellipsis;
                          "><span>경력</span> | <span>근무지역</span></p>
                        </div>
                    </a>
                    <!-- 삭제하기 버튼 아직 안 됨(디테일에서는 됨) -->
                    <form action="/company/posts/1/delete" method="post"
                          class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-outline-danger mb-3" style="width: 100%">삭제하기</button>
                    </form>
                </li>
        </ul>
    </section>
    <!-- list-group( 오른쪽 바로가기) 시작 -->
    <div class="list-group" style="position: fixed; right: 80px; top: 220px; width: 180px;">
        <a href="/company/info" class="list-group-item" style="width: 180px;">회사 정보 관리</a>
        <a href="/company/posts" class="list-group-item active" style="width: 180px;">공고 관리</a>
        <a href="/company/resumes" class="list-group-item hs_list_effect" style="width: 180px;">받은 이력서</a>
        <a href="/company/scrap" class="list-group-item " style="width: 180px;">스크랩한 이력서</a>
        <a href="/company/offers" class="list-group-item" style="width: 180px;">제안한 이력서</a>
    </div>
    <!-- list-group( 오른쪽 바로가기) 끝 -->
</div>
<div class="container mt-5 mb-5">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">이전</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">다음</a>
            </li>
        </ul>
    </nav>
</div>
<!-- 페이지네이션 -->
{{> layout/footer}}