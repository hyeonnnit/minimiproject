{{> /layout/header}}

<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container d-flex">
    <div class=" mx-2 pb-4 w-100">
        <div class="p-5">
            <div class="d-flex justify-content-between">
                <h1>회사정보수정</h1>
            </div>
            <hr/>
            <div>
                <div class="container w-50 mt-5 text ">
                    <!-- MIME 타입: multipart/form-data 파일이나 이미지 업로드 시 사용
                     -->

                    <form action="/company/info/update" method="post" enctype="multipart/form-data">
                        <input type="hidden" id="id" name="id" value="1">
                        <div class="px-5 mt-5">
                            <!-- 이미지 업로드 시작 -->
                            <div class="upload d-flex justify-content-center mb-3">
                                <div class=" d-flex d-flex justify-content-center align-items-center"
                                     style="width: 200px; height: 260px; border: 1px solid #e6e6e6; color: #e6e6e6;"
                                     id="profilePreview"><img src="/images/파일명"
                                                              style="width: 100%; height: 100%;">
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <input type="file" class="form-control mt-2" accept="image/*" name="profile"
                                       id="profile" value="파일명" multiple required/>
                            </div>
                            <!-- 이미지 업로드 끝 -->
                        </div>
                        <div class="mt-5">
                            <h4 class="border-bottom pb-4">기본 정보</h4>
                        </div>

                        <div class="mb-3 mt-3">
                            <label for="compName" class="form-label">회사명</label>
                            <input type="compName" class="form-control" id="compName" name="compName"
                                   value="zusimCompany" required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="businessNum" class="form-label">사업자 번호</label>
                            <input type="businessNum" class="form-control" id="businessNum" name="businessNum" value="123-456-78"
                                   required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="address" class="form-label">회사주소</label>
                            <input type="address" class="form-control" id="address" name="address" value="부산광역시"
                                   required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="phone" class="form-label">회사 전화번호</label>
                            <input type="phone" class="form-control" id="phone" name="phone"
                                   value="051-1234-5678" required>
                        </div>

                        <div class="mt-5">
                            <h4 class="border-bottom pb-4">담당자 정보</h4>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="name" class="form-label">이름</label>
                            <input type="name" class="form-control" id="name" name="name" value="심유주"
                                   required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="email" class="form-label">이메일</label>
                            <input type="email" class="form-control" id="email" name="email"
                                   value="zusim@nate.com" required>
                        </div>

                        <div class="mt-5">
                            <h4 class="border-bottom pb-4">비밀번호 수정</h4>
                        </div>
                        <br>

                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text  justify-content-center hs_span_size init_color">변경 비밀번호</span>
                            <input type="password" class="form-control" id="newPassword"
                                   name="newPassword">
                        </div>

                        <div class="d-flex justify-content-center mt-5" style="width: 100%;">
                            <div style="width: 100%;">
                                <button type="submit" class="btn btn-outline-success mb-3"
                                        style="width: 100%">수정완료
                                </button>
                            </div>
                            <div class="d-flex justify-content-center" style="width: 100%">
                                <a href="/company/info" class="btn btn-outline-danger mb-3"
                                   style="width: 100%">취소</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{> /layout/footer}}