{{> layout/header}}
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<div style="margin-top: 100px; margin-bottom: 100px;">
    <div class="container grid-gap: 50px;">
        <ul class="nav nav-pills justify-content-center">
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/person/join-form">개인 회원가입</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/company/join-form">기업 회원가입</a>
            </li>
        </ul>
    </div>
    <div class="d-flex justify-content-center">
        <div class="border p-3 m-3" style="width: 300px;">
            <form action="/company/join" method="post" enctype="multipart/form-data">
                <div class="form-group form-floating m-3 mx-auto">
                    <div class="px-5 mt-5">
                        <!-- 이미지 업로드 시작 -->
                        <div class="upload d-flex justify-content-center mb-5 flex-column align-items-center">
                            <div class="d-flex justify-content-center align-items-center"
                                 style="width: 200px; height: 150px; border: 1px solid #E6E6E6; color: #E6E6E6;"
                                 id="profilePreview">
                                <b>사진을 등록해 주세요.</b>
                            </div>
                            <input type="file" id="imageUpload" name="profile"
                                   class="real-upload mx-auto d-block mt-2 w-50 h-50" accept="image/*" required
                                   multiple>
                        </div>
                        <!-- 이미지 업로드 끝 -->
                    </div>
                </div>


                <div class="form-group form-floating m-3 mx-auto">
                    <input type="text" name="compName" class="form-control" id="compName" value="zusimCompany" required>
                    <label for="compName">회사명</label>
                </div>
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="text" name="businessNum" maxlength="10" class="form-control" id="businessNum"
                           value="123-456-7910"
                           required>
                    <label for="businessNum">사업자 번호</label>
                </div>
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="text" name="phone" class="form-control" id="phone" value="01012345678" required>
                    <label for="phone">회사 전화번호</label>
                </div>
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="text" name="addr" class="form-control" id="addr" value="부산광역시" required>
                    <label for="addr">회사 주소</label>
                </div>
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="text" name="username" class="form-control" id="username" value="유주심" required>
                    <label for="username">담당자 이름</label>
                </div>
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="email" name="email" class="form-control" id="email" value="zu-sim@nate.com" required>
                    <label for="email">담당자 이메일</label>
                </div>
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="text" name="userId" class="form-control" id="userId" value="zu-sim" required>
                    <label for="userId">ID</label>
                </div>
                <div class="company-password">
                    <div class="form-group form-floating m-3 mx-auto">
                        <input type="password" name="password" class="form-control" id="password" value="1234" required>
                        <label for="password">비밀번호</label>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" href="#" class="btn btn-outline-primary mb-3 mt-4" style="width: 100%">회원가입
                    </button>
                </div>
            </form>
            <div class="text-center sj_login_join">
                <p><a href="/company/login-form" style="color: #164361;">이미 회원이신가요?</a></p>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}