{{> layout/header}}
<!-- 공고 본체  -->
<div class="container justify-content-center mt-4 mb-5">
    <div class="hs_content_box w-100 mx-2 mt-4 pb-5">
        <div class="px-5 pt-5 pb-2"></div>
        <div class="px-5">
            <div class="row align-items-center">
                <!-- 타이틀 -->
                <div class="col">
                    <h3 style="font-weight: bold">제목</h3>
                </div>
                <!-- 스크랩 -->
                <div class="col-auto">

                            <form action="/resumes/1/scrap" method="post">

                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-outline-success" type="submit">스크랩하기</button>
                                </div>
                            </form>

                </div>
            </div>
            <hr class="d-inline-flex w-100">
            <!-- 제안, 스크랩 버튼 -->

                    <form class="row d-flex justify-content-end g-3" action="/resumes/1/offer"
                          method="post">
                        <div class="col-auto">
                            <select class="form-select" aria-label="Default select example" id="postChoice"
                                    name="postChoice">
                                <option selected>채용 공고 선택</option>

                                    <option value="id">제목</option>

                            </select>

                        </div>
                        <div class="col-auto">
                            <button class=" btn btn-outline-success" type="submit"><i class="far fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>

            <div class="pt-5 mt-3">
                <div class="border border-tertiary px-3 py-3 pt-3 d-inline-flex ms-2 me-3 mb-3 w-100">
                    <div><!-- 이미지를 올리면 그게 올라가고 올리지 않으면 기본 프로필이 올라감 -->
                        <img src="/images/파일명" alt="프로필 사진" style="width: 188px; height: 226px;">

                    </div>
                    <table class="mx-4 resume_table">
                        <tr>
                            <td style="width: 120px">이름</td>
                            <td>이름</td>
                        </tr>
                        <tr>
                            <td>생년월일</td>
                            <td>생년월일</td>
                        </tr>
                        <tr>
                            <td>연락처</td>
                            <td>연락처</td>
                        </tr>
                        <tr>
                            <td>주소</td>
                            <td>주소</td>
                        </tr>
                        <tr>
                            <td>이메일</td>
                            <td>이메일</td>
                        </tr>
                    </table>
                </div>
                <div class="mt-5">
                    <h4>커리어</h4>
                    <textarea style="max-height: 150px; overflow-y: auto;" class="w-100 mb-5 opacity-80" rows="10"
                              readOnly>경력</textarea>
                    <h4>간단 소개</h4>
                    <textarea style="max-height: 150px; overflow-y: auto;" class="w-100 mb-5 opacity-80" rows="10"
                              readOnly>한줄소개</textarea>
                    <h4>포트폴리오 주소</h4>
                    <input type="url" class="form-control mt-2" id="" style="display: block;"
                           value="포트폴리오 주소" readOnly>
                </div>
                <div class="mt-5 jh_resume_skill">
                    <h4>기술스택</h4>
                    <div>
                            <button class="btn btn-outline-warning btn-sm disabled col-1">스킬</button>
                    </div>
                </div>
                <div class="mt-5 w-100">
                    <h4>자기소개</h4>
                    <textarea style="max-height: 150px; overflow-y: auto;" class="w-100 opacity-80" rows="10"
                              readOnly>자기소개
                    </textarea>
                </div>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}