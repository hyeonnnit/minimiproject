{{> layout/header}}
<div style="margin-top: 100px; margin-bottom: 100px;">
    <div class="container grid-gap: 50px;">
        <ul class="nav nav-pills justify-content-center">
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/person/login-form">개인 로그인</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/company/login-form">기업 로그인</a>
            </li>
        </ul>
    </div>
    <div class="d-flex justify-content-center">
        <div class="border p-3 m-3 " style="width: 300px;">
            <form action="/company/login" method="post">
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="text" name="userId" class="form-control" id="floatingInput" required value="sk_HR">
                    <label for="floatingInput">ID</label>
                </div>
                <div class="form-group form-floating m-3 mx-auto">
                    <input type="password" name="password" class="form-control" id="floatingInput" required value="1234">
                    <label for="floatingInput">비밀번호</label>
                </div>
                <div class="form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> 로그인 유지
                    </label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-outline-success mb-3" style="width: 100%">로그인</button>
                </div>
            </form>
            <div class="text-center">
                <p><a href="/company/join-form" style="color: #164361;">아직 회원이 아니신가요?</a></p>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}