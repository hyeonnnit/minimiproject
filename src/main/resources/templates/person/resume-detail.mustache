{{> layout/header}}
<div class="container d-flex">
    <div class=" mx-2 pb-4 w-100">
        <div class="border border-tertiary p-5 rounded shadow">
            <h1>{{resume.title}}</h1>
            <div class="d-flex justify-content-start mx-2">
            </div>
            <hr>

            <div class="d-flex justify-content-center">
                <div style="width: 85%;">
                    <img src="/images/{{resume.profile}}" alt="프로필 사진" style="width: 188px; height: 226px;">
                    <div class="jh_resume_flexbox mt-3">
                        <!-- 이미지를 올리면 그게 올라가고 올리지 않으면 기본 프로필이 올라감 -->
                        <table class="resume_table">
                            <tr>
                                <td>이름</td>
                                <td>{{resume.user.name}}</td>
                            </tr>
                            <tr>
                                <td>생년월일</td>
                                <td>{{resume.user.birth}}</td>
                            </tr>
                            <tr>
                                <td>연락처</td>
                                <td>{{resume.user.tel}}</td>
                            </tr>
                            <tr>
                                <td>주소</td>
                                <td>{{resume.user.address}}</td>
                            </tr>
                            <tr>
                                <td>이메일</td>
                                <td>{{resume.user.email}}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="mt-5">
                        <h4>커리어</h4>
                        <input name="career" class="w-100 opacity-50" rows="10" value="{{resume.career}}" readOnly>
                        <h4>간단 소개</h4>
                        <input name="simpleIntroduce" class="w-100 opacity-50" rows="10"
                               value="{{resume.simpleIntroduce}}" readOnly>
                        <h4>포트폴리오 주소</h4>
                        <input type="url" class="form-control mt-2" id="" name="portfolio" style="display: block;"
                               value="{{resume.portfolio}}" readOnly>
                    </div>
                    <div class="mt-5 jh_resume_skill">
                        <h4>기술스택</h4>
                        <div>
                            <h6>
                                <span>
                                    {{#resume.skillList}}
                                        <button class="btn btn-outline-warning btn-sm disabled">{{skill}}
                                    </button>
                                    {{/resume.skillList}}

                                </span>
                            </h6>
                        </div>
                    </div>
                    <div class="mt-5 w-100">
                        <h4>자기소개</h4>
                        <textarea name="introduce" class="w-100 opacity-50" rows="10" readOnly>{{resume.introduce}}
                        </textarea>
                    </div>
                    <div class="d-flex justify-content-center ">
                        <a href="/person/resume/detail/1/update-form" class="btn btn-outline-success mt-3 mb-3"
                           style="width: 100%">수정하기</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--    </form>-->
    <!-- list-group( 오른쪽 바로가기) 시작 -->
    <div class="list-group mx-2">
        <a href="/person/info" class="list-group-item shadow " style="width: 150px;">회원정보관리</a>
        <a href="/person/resume" class="list-group-item shadow">이력서관리</a>
        <a href="/person/scrap" class="list-group-item hs_list_effect shadow">스크랩한 공고</a>
        <a href="/person/offers" class="list-group-item shadow">받은 제안</a>
        <a href="/person/applies" class="list-group-item shadow">지원 현황</a>
    </div>
    <!-- list-group( 오른쪽 바로가기) 끝 -->
</div>
{{> layout/footer}}